
@model IEnumerable<InAndOut.Models.Expense>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Expenses List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Expense" asp-action="Create">Create New Expense</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Expense Name</th>
                    <th>Amount</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                <tr>
                    <th width="30%">@expense.ExpenseName</th>
                    <th width="30%">@expense.Amount</th>
                    <th width="30%">
                        <a class="btn btn-primary" asp-controller="Expense" asp-action="Update" asp-route-Id="@expense.Id">Edit Expense</a>
                        <a class="btn btn-danger" asp-controller="Expense" asp-action="Delete" asp-route-Id="@expense.Id">Delete Expense</a>
                    </th>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Items Created yet</p>
    }
