@model InAndOut.Models.Item


<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Add Item</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ItemName"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Borrower"></label>
                        
                    </div>
                    <div class="col-4">
                        <label asp-for="Lender"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input type="text" asp-for="ItemName" class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Borrower" class="form-control"/>
                    </div>
                    <div class="col-4">
                        <input type="text" asp-for="Lender" class="form-control"/>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 text-center row offset-2">
                        <div class="col">
                            <button type="submit" class="btn btn-info w-75">Create</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
