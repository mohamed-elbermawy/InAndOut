@model IEnumerable<InAndOut.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Item" asp-action="Create">Create New Item</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0) {
        <table class="table table-bordered table-striped" style="width:100%;">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="30%">@item.ItemName</th>
                        <th width="30%">@item.Borrower</th>
                        <th width="30%">@item.Lender</th>
                    </tr>
                }
            </tbody>
        </table>
    }else{
        <p>No Items Created yet</p>
    }
</div>